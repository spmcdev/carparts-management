# Railway Staging Environment Configuration
RAILWAY_ENVIRONMENT=staging

# Backend API Configuration
NODE_ENV=staging
PORT=3001

# Database Configuration (Railway provides these automatically)
# DATABASE_URL is auto-injected by Railway for linked PostgreSQL service

# Frontend API Configuration
REACT_APP_API_URL=https://carparts-staging-api.up.railway.app

# JWT Configuration
JWT_SECRET=your-staging-jwt-secret-here
JWT_EXPIRES_IN=24h

# CORS Configuration
FRONTEND_URL=https://carparts-staging.up.railway.app

# Logging
LOG_LEVEL=debug
